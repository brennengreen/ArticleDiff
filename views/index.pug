doctype html
html(lang='en')
    head
        title Beat the Bias!
        <link href="/stylesheets/style.css" type="text/css" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Libre+Baskerville&display=swap" rel="stylesheet">

    body
        div(class="greeting")
            h1 #{title}
            h3 Use ArticleDiff to beat the bias and stay one step ahead of the fake news!
            p Developed by Brennen Green and Kevin Patel
            p University of Kentucky
        div(class="search")
            input(type="search", name="search-bar", class="search-box" placeholder="Article topic...") 
            div(class="search-button", id="button-3")
                div(id="circle")
                a Search!
        div(class="hl")

        div(class="company-box" style="display:flex;flex-wrap:nowrap;")
            div(class="whitespace-divider")
            div(class="company-container" id="container-left")
                select(name="company-left" class="company-selection")
                    option(value="") Company One
                    option(value="cnn") CNN
                    option(value="msnbc") MSNBC
                    option(value="fox") FOX
                    option(value="politico") Politco
                    option(value="ap") AP
                    option(value="bbc") BBC
            div(class="whitespace-divider")
            div(class="vl")
            div(class="whitespace-divider")
            div(class="company-container" id="container-right")
                select(name="company-right" class="company-selection")
                    option(value="") Company Two
                    option(value="cnn") CNN
                    option(value="msnbc") MSNBC
                    option(value="fox") FOX
                    option(value="politico") Politco
                    option(value="ap") AP
                    option(value="bbc") BBC
            div(class="whitespace-divider")

                
